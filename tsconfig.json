{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"strictPropertyInitialization": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"@types/node",
		],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"exclude": [
		"dist",
	]
}